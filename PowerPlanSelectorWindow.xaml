<Window x:Class="AutoStarter.PowerPlanSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="選擇電源計畫"
        Width="300" Height="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="PowerPlanListBox" Grid.Row="0" DisplayMemberPath="Name" />

        <Button Content="確定" Grid.Row="1" Margin="0,10,0,0" Click="OkButton_Click" />
    </Grid>
</Window>
