<ui:FluentWindow x:Class="AutoStarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoStarter"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="自動啟動編輯器"
        Height="600" Width="1064"
        WindowBackdropType="Acrylic"
        Background="#99000033"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True">
    <ui:FluentWindow.Resources>
        <Style x:Key="FrostedGlassButtonStyle" TargetType="{x:Type ui:Button}">
            <Setter Property="Background" Value="#33FFFFFF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#4CFFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ui:Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4DFFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ui:FluentWindow.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="自動啟動編輯器" ShowClose="True" ShowMinimize="True" />

        <Border Grid.Row="1" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource ControlElevationBorderBrush}">
            <DataGrid x:Name="ActionsDataGrid"
                      Style="{DynamicResource DefaultDataGridStyle}"
                      Background="Transparent"
                  ItemsSource="{Binding ActionItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserSortColumns="False"
                  SelectionMode="Extended"
                  HeadersVisibility="Column" 
                  SelectionChanged="ActionsDataGrid_SelectionChanged"
                  AllowDrop="True"
                  Drop="ActionsDataGrid_Drop"
                  DragOver="ActionsDataGrid_DragOver"
                      RowHeight="35">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="編輯" Click="Edit_Click"/>
                    <Separator />
                    <MenuItem Header="上移" Click="MoveUp_Click"/>
                    <MenuItem Header="下移" Click="MoveDown_Click"/>
                    <Separator />
                    <MenuItem Header="移除" Click="Delete_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#770078D7" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="最小化" Binding="{Binding MinimizeWindow, UpdateSourceTrigger=PropertyChanged}" Width="Auto">
                    <DataGridCheckBoxColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Delay">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="DisableAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetPowerPlan">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridCheckBoxColumn.CellStyle>
                </DataGridCheckBoxColumn>
                <DataGridCheckBoxColumn Header="強制最小化" Binding="{Binding ForceMinimizeWindow, UpdateSourceTrigger=PropertyChanged}" Width="Auto">
                    <DataGridCheckBoxColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Delay">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="DisableAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetPowerPlan">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridCheckBoxColumn.CellStyle>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Header="類型" Binding="{Binding TypeString}" IsReadOnly="True" Width="Auto">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="名稱" Binding="{Binding Description}" IsReadOnly="True" Width="*">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="檔案路徑" Binding="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}" Width="2*">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Delay">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="DisableAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetPowerPlan">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="啟動參數" Binding="{Binding Arguments, UpdateSourceTrigger=PropertyChanged}" Width="2*">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Delay">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="DisableAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetPowerPlan">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="延遲" Binding="{Binding DelaySeconds, UpdateSourceTrigger=PropertyChanged}" Width="33">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="LaunchApplication">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="DisableAudioDevice">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="SetPowerPlan">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        </Border>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="新增程式" Click="AddApp_Click" Margin="5" Padding="5" Appearance="Primary"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="新增延遲" Click="AddDelay_Click" Margin="5" Padding="5"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="切換音訊" Click="AddAudio_Click" Margin="5" Padding="5"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="停用音訊" Click="AddDisableAudio_Click" Margin="5" Padding="5"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="切換電源計畫" Click="AddPowerPlan_Click" Margin="5" Padding="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="427,0,0,0" Grid.ColumnSpan="3">
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="上移" Click="MoveUp_Click" Margin="5" Padding="5"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="下移" Click="MoveDown_Click" Margin="5" Padding="5"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="移除" Click="Remove_Click" Margin="5" Padding="5" Appearance="Danger"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="註冊檔案關聯" Click="RegisterFileAssociation_Click" Margin="20,5,5,5" Padding="5"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="移除檔案關聯" Click="UnregisterFileAssociation_Click" Margin="5" Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="匯入設定檔" Click="ImportProfile_Click" Margin="5" Padding="5"/>
                <ui:Button Style="{StaticResource FrostedGlassButtonStyle}" Content="輸出設定檔" Click="SaveProfile_Click" Margin="5" Padding="5" FontWeight="Bold" Appearance="Success"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
