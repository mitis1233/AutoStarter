<ui:FluentWindow x:Class="AutoStarter.AudioVolumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="調整音量"
        Width="360"
        Height="350"
        WindowStartupLocation="CenterOwner"
        WindowBackdropType="Acrylic"
        Background="#99000033"
        ExtendsContentIntoTitleBar="True">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="調整音量" ShowClose="True" />

        <StackPanel Grid.Row="1" Margin="0,12,0,0">
            <Border Background="#1AFFFFFF" CornerRadius="8" Padding="12" BorderBrush="#33FFFFFF" BorderThickness="1" Margin="0,0,0,12">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox x:Name="PlaybackCheckBox"
                                  Content="播放裝置"
                                  Foreground="White"
                                  IsChecked="True"
                                  Checked="PlaybackCheckBox_Checked"
                                  Unchecked="PlaybackCheckBox_Checked"/>
                        <TextBox x:Name="PlaybackValueBox"
                                 Width="70"
                                 Text="50"
                                 Margin="12,0,0,0"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Foreground="#FFDCE1FF"
                                 Background="#10FFFFFF"
                                 BorderBrush="#40FFFFFF"
                                 BorderThickness="1"
                                 TextChanged="PlaybackValueBox_TextChanged"/>
                    </StackPanel>
                    <StackPanel x:Name="PlaybackSliderHost" Margin="0,10,0,0">
                        <Slider x:Name="PlaybackSlider"
                                Minimum="0"
                                Maximum="100"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="PlaybackSlider_ValueChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#1AFFFFFF" CornerRadius="8" Padding="12" BorderBrush="#33FFFFFF" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox x:Name="RecordingCheckBox"
                                  Content="錄音裝置"
                                  Foreground="White"
                                  IsChecked="False"
                                  Checked="RecordingCheckBox_Checked"
                                  Unchecked="RecordingCheckBox_Checked"/>
                        <TextBox x:Name="RecordingValueBox"
                                 Width="70"
                                 Text="50"
                                 Margin="12,0,0,0"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Foreground="#FFDCE1FF"
                                 Background="#10FFFFFF"
                                 BorderBrush="#40FFFFFF"
                                 BorderThickness="1"
                                 TextChanged="RecordingValueBox_TextChanged"/>
                    </StackPanel>
                    <StackPanel x:Name="RecordingSliderHost" Margin="0,10,0,0" Visibility="Collapsed">
                        <Slider x:Name="RecordingSlider"
                                Minimum="0"
                                Maximum="100"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="RecordingSlider_ValueChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <ui:Button Content="確認" Width="100" Click="ConfirmButton_Click" />
            <ui:Button Content="取消" Width="100" IsCancel="True" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
